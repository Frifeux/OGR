{% extends 'base.html.twig' %}

{% block title %}OGR - Réinitialisation Mot de passe{% endblock %}

{% block body %}
    <div class="min-vh-100 gradient-custom d-flex flex-grow-1 align-items-center">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-7">

                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-4 mt-md-4 pb-1">

                                <h2 class="fw-bold mb-2 text-uppercase">{% trans %} Réinitialiser le mot de passe {% endtrans %}</h2>
                                <p class="text-white-50 mb-4">{% trans %} Vous avez oublié votre mot de passe ? Veuillez entrer votre adresse courriel pour initier la réinitialisation. {% endtrans %}</p>

                                {% for flashError in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}

                                {{ form_start(requestForm) }}

                                <div class="form-white mb-4">
                                    {{ form_widget(requestForm.email) }}
                                </div>

                                <button class="btn btn-outline-light btn-lg px-5" type="submit">{% trans %} Envoyer {% endtrans %}</button>

                                {{ form_end(requestForm) }}
                            </div>

                            <div>
                                <p class="mb-0">{% trans %} Vous n'avez pas de compte ? {% endtrans %} <a href="{{ path('app_register') }}" class="text-white-50 fw-bold">{% trans %} Inscrivez-vous {% endtrans %}</a></p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
