{% extends 'base.html.twig' %}

{% block title %}OGR - Connexion{% endblock %}

{% block body %}

    <form method="post">
        <div class="vh-100 gradient-custom">
            <div class="container py-5 h-100">

                {% if app.user %}
                    <div class="mb-3 text-white">
                        {% trans %} Vous êtes connecté en tant que {% endtrans %} {{ app.user.email }}, <a href="{{ path('app_logout') }}"> {% trans %} Déconnexion {% endtrans %}</a>
                    </div>
                {% endif %}

                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">

                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <div class="mb-md-4 mt-md-4 pb-1">

                                    <div class="text-center">
                                        <h2 class="fw-bold mb-2 text-uppercase">{% trans %} Connexion {% endtrans %}</h2>
                                        <p class="text-white-50 mb-5">{% trans %} Entrez vos identifiants de connexion {% endtrans %}</p>
                                    </div>

                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    <div class="form-white mb-4">
                                        <input type="email" value="{{ last_username }}" placeholder="{% trans %} Email {% endtrans %}" name="email" id="inputEmail" class="form-control form-control-lg" required autofocus/>
                                    </div>

                                    <div class="form-white mb-4">
                                        <input type="password" placeholder="{% trans %} Mot de passe {% endtrans %}" name="password" id="inputPassword" class="form-control form-control-lg" autocomplete="current-password" required />
                                    </div>

                                    <p class="small mb-1 pb-lg-2 text-center"><a class="text-white-50" href="{{ path('app_forgot_password_request') }}">{% trans %} Mot de passe oublié? {% endtrans %}</a></p>

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input class="form-check-input" type="checkbox" name="_remember_me"> {% trans %} Rester connecté {% endtrans %}
                                        </label>
                                    </div>

                                    <div class="text-center">
                                        <button class="btn btn-outline-light btn-lg px-5" type="submit">{% trans %} Connexion {% endtrans %}</button>
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="text-center">
                                    <p class="mb-0">{% trans %} Vous n'avez pas de compte ? {% endtrans %} <a href="{{ path('app_register') }}" class="text-white-50 fw-bold">{% trans %} Inscrivez-vous {% endtrans %}</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
